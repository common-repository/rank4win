<div id="r4w_st_page_sn_metatag" class="page_tab">
	<input type="hidden" name="wp_post_title" value="[@wp_post_title]">
	<input type="hidden" name="wp_post_description" value="[@wp_post_content]">
	<div class="css-dsf5e0ff">
		<label class="css-gfejhyi850 title_gwp">
			{_('Metadata')}
		</label>
		<div class="r4w_bullet_info">
			<div class="css-sd5r0fze5">[@svg_bullet_info]</div>
			<div class="css-df5r0grg">
				{_('You can customize your meta title and description for the page')}.
			</div>
		</div>
		<div class="r4w_bullet_bulb">
			<div class="css-sd5r0fze5">[@svg_bullet_bulb]</div>
			<div class="css-df5r0grg">{_('When no tag is specified, we use the default meta tags')}</div>
		</div>
		<div class="r4w_atwho_box select-field">
			<label for="bac_hom_title">{_('Meta Title')}</label>
			<div class="btn_add_tag"><div class="css-25c58628966c">[@svg_add_more]</div></div>
			<div class="r4w_autosave_info r4w_progress_div">
				<input class="athow_input r4w_autosave" name="page|meta_title"></input>
				<div contenteditable="true" data-tag="[@tag_data_title]" class="athow_content content_preview_title">[@meta_title]</div>
			</div>
			<div class="r4w_status">
				<div class="r4w_status_meta"></div>
				<div class="r4w_status_description"></div>
			</div>
		</div>
		<div class="r4w_atwho_box select-field athow_lg">
			<label for="bac_hom_description"> {_('Meta Description')}</label>
			<div class="btn_add_tag"><div class="css-25c58628966c">[@svg_add_more]</div></div>
			<div class="r4w_autosave_info r4w_progress_div">
				<input class="athow_input r4w_autosave" name="page|meta_description"></input>
				<div contenteditable="true" data-tag="[@tag_data_description]" class="athow_content content_preview_description" >[@meta_description]</div>
			</div>
			<div class="r4w_status">
				<div class="r4w_status_meta"></div>
				<div class="r4w_status_description"></div>
			</div>
		</div>
		<div class="r4w_box_preview r4w_preview_google">
			<div class="css-sd5zd0dvf preview_title">[@preview_title]</div>
			<div class="css-dgfyr0erze">[@preview_url] &rsaquo; [@preview_slug]</div>
			<div class="css-fdsre10ec preview_description">[@preview_description]</div>
		</div>
	</div>
</div>
